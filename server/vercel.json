{
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": {
          "buildCommand": "npm install && chmod +x $(npm bin)/node-pre-gyp && npm rebuild bcrypt",
          "includeFiles": ["**/*"]
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/api/$1"
      }
    ]
  }
